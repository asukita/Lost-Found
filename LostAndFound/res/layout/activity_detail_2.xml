<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingBottom="30dp" >

            <LinearLayout
                android:id="@+id/lineardetailM1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lineardetailM2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageUserdetailM"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/user" />

                    <RelativeLayout
                        android:id="@+id/relativedetailM1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" >

                        <LinearLayout
                            android:id="@+id/lineardetailM3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textActivityUserNamedetailM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="open-sans"
                                android:text="@string/userName"
                                android:textColor="#656565"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/userMsgLarge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="#00000000"
                                android:ems="10"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="open-sans"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="0dp"
                                android:text="@string/userMsgLarge"
                                android:textColor="#656565"
                                android:textSize="14sp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textActivityTimedetailM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/lineardetailM3"
                            android:layout_alignTop="@+id/lineardetailM3"
                            android:layout_marginRight="9dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="open-sans"
                            android:text="@string/postTime"
                            android:textColor="#B71C4E"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <LinearLayout
                        android:id="@+id/linearTypePostDetailP"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:background="#FFD400"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageTypePostHome"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_margin="3dp"
                            android:contentDescription="@string/report"
                            android:src="@drawable/home_ico" />

                        <TextView
                            android:id="@+id/textActivityTypePostHomeDetailP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="open-sans"
                            android:text="@string/report_home"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageShareDetailP"
                        android:layout_width="85dp"
                        android:layout_height="22dp"
                        android:layout_alignRight="@+id/linearTypePostDetailP"
                        android:layout_alignTop="@+id/linearTypePostDetailP"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/report"
                        android:src="@drawable/btn_share_blue" />

                    <ImageView
                        android:id="@+id/imageArrowDownDetailP"
                        android:layout_width="15dp"
                        android:layout_height="8dp"
                        android:layout_alignRight="@+id/linearTypePostDetailP"
                        android:layout_alignTop="@+id/linearTypePostDetailP"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/report"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/bottom_border_dark_gray"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.33"
                        android:minHeight="200dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="255dp"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/doc_icon"
                            android:drawablePadding="10dp"
                            android:text="@string/dog_label"
                            android:textColor="#656565"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reportDate_title"
                            android:textColor="#B4B4B4"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/report_date"
                            android:textColor="#656565"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        android:paddingLeft="8dp" >

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/reportPetName_lbl"
                            android:textColor="#B4B4B4"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unknown"
                            android:textColor="#656565"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reportPetAge_lbl"
                            android:textColor="#B4B4B4"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/report_aproxAge"
                            android:textColor="#656565"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.33"
                        android:orientation="vertical"
                        android:paddingLeft="8dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reportPetCaracteristics_lbl"
                            android:textColor="#B4B4B4"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text="@string/reportPetCaracteristics_txt"
                            android:textColor="#656565"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineardetailMsgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_bottom_gray"
                    android:minHeight="60dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageUserdetailMsgs"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/user2" />

                    <RelativeLayout
                        android:id="@+id/relativedetailMsgs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" >

                        <LinearLayout
                            android:id="@+id/lineardetailMsgs2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textActivityUserNamedetailMsgs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="open-sans"
                                android:text="@string/user2Name"
                                android:textColor="#656565"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/userMsgs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="#00000000"
                                android:ems="10"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="open-sans"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="0dp"
                                android:paddingBottom="8dp"
                                android:text="@string/user2Msg"
                                android:textColor="#656565"
                                android:textSize="14sp"
                                android:typeface="sans" >
                            </EditText>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textActivityTimedetailMsgs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/lineardetailMsgs2"
                            android:layout_alignTop="@+id/lineardetailMsgs2"
                            android:layout_marginRight="9dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="open-sans"
                            android:text="@string/postTime2"
                            android:textColor="#B71C4E"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSendMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_bottom_gray"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp" >

                    <ImageView
                        android:id="@+id/imageUserdetailMsgS"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/user" />

                    <RelativeLayout
                        android:id="@+id/relativedetailMsgS1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/textActivityUserNamedetailMsgS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="open-sans"
                            android:text="@string/userName"
                            android:textColor="#656565"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/lineardetailMsgS3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textActivityUserNamedetailMsgS"
                            android:orientation="horizontal"
                            android:weightSum="3" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/userNewMsg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/edittexts_borders_gray"
                                    android:ems="20"
                                    android:fontFamily="open-sans"
                                    android:gravity="top"
                                    android:inputType="textMultiLine"
                                    android:lineSpacingExtra="0dp"
                                    android:minHeight="40dp"
                                    android:padding="2dp"
                                    android:textColor="#656565"
                                    android:textSize="14sp"
                                    android:typeface="sans" >
                                </EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <ImageButton
                                    android:id="@+id/imageSendNewMsg"
                                    android:layout_width="37dp"
                                    android:layout_height="37dp"
                                    android:background="@drawable/btn_corner_round_light_gray"
                                    android:contentDescription="@string/app_name"
                                    android:padding="20dp"
                                    android:src="@drawable/checked_gray" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_alignParentBottom="true"
        android:background="#3A3A3A"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/marcar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/pinIt"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/share"
                android:gravity="center"
                android:src="@drawable/compartir_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/checked"
                android:gravity="center"
                android:src="@drawable/checked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/checked"
                android:textColor="#FFFFFF" />
        </TableRow>
    </LinearLayout>

</RelativeLayout>